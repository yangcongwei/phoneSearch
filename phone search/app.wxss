/**app.wxss**/
page {
  background-color: #efeff4;
  height: 100%;
  color: #353535;
  font-family:Helvetica, Arial, "Hiragino Sans GB", "Source Han Sans CN", "PingFang SC", Roboto, "微软雅黑", "Heiti SC", "Microsoft Yahei", sans-serif;
}
.fz14{
	font-size: 14px;
}
.fz16{
	font-size: 16px;
}
.fz17{
	font-size: 17px;
}
.green{
  color: #44aeb1;
}
.red{
  color: #F76260;
}
.blue{
  color: #4e7ed1;
}
.yellow{
  color: #f17524;
}
.gray{
  color: #b2b2b2;
}

.strong{
  font-weight: bold;
}

.bc_green{
  background-color: #09BB07;
}
.bc_red{
  background-color: #F76260;
}
.bc_blue{
  background-color: #10AEFF;
}
.bc_yellow{
  background-color: #FFBE00;
}
.bc_gray{
  background-color: #C9C9C9;
}

.tc{
  text-align: center;
}

.page input{
  padding: 20rpx 30rpx;
  background-color: #fff;
}
checkbox, radio{
  margin-right: 10rpx;
}

.btn-area{
  padding: 0 30px;
}
.btn-area button{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.page {
	min-height: 100%;
	flex: 1;
	background-color: #FBF9FE;
	font-size: 32rpx;
	font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
	overflow: hidden;
}
.page__hd{
	padding: 50rpx 50rpx 100rpx 50rpx;
	text-align: center;
}
.page__title{
	display: inline-block;
	padding: 20rpx 40rpx;
	font-size: 32rpx;
	color: #AAAAAA;
	border-bottom: 1px solid #CCCCCC;
}

.list{
	background-color:#FFFFFF;
  border-bottom:1px solid #eeeeee;
}

/*加载更多*/
.loading-list{
	height: 40px;
	display: flex;
	justify-content: center;
  align-items: center;
  
}
.loading-gif{
	height: 16px;
	width: 16px;	
	margin-right:10px;
}
/*加载失败*/
.wifihidden{
	height: 40px;
	line-height: 40px;
	text-align: center;
	font-size: 14px;
}
/*按下效果*/
.hoverClass{
	background-color: #e7e5eb;
}
/*产品列表*/
.product-list{
	display: flex;
}
.product-list navigator{
	width: 100%;
	height: 175.5rpx;
	overflow: hidden;
	padding:23.4rpx;
	font-size: 17px;
	display: flex;
	justify-content: space-between;
}
.product-list-main{
	margin-top: 11.7rpx;
	height: 163.8rpx;
	flex:1;
	display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.product-list-name{
	width: 453.96rpx;
	overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.product-list-img{
	margin-right:23.4rpx;
}
.product-list-img1{
	font-size: 0;
	height: 175.5rpx;
	width: 234rpx;
	background-color: #fff;
}
.product-list-btn{
	display: flex;
}
.product-list-btn view{
	font-size: 12px;
	height: 46rpx;	
	line-height: 48rpx;	
	padding:0 17.55rpx;
	background-color:#f7f7f7;
	border-radius: 5.85rpx;
	margin-right:17.55rpx;
}
.product-list-btn .blue{
	margin-right:0;
}
.product-list-des{
	height: 17px;
	line-height: 17px;
	display: flex;
	justify-content: space-between;
}
.product-list-money{
	color: #db2424;
	margin-right:5.85rpx;
	
}