/*产品名称*/
.product-tit{
	width: 100%;
	padding:23.4rpx;
	box-sizing: border-box;
	color: #121212;
}
.product-tit::after{
	content: " ";
	display: block;
	clear: both;
	
}
.product-tit-name{
	line-height: 74.88rpx;
	/*display: flex;
	justify-content: space-between;*/
}
.product-tit-name1{
	word-break: break-all;
	float: left;
}
.product-tit-name .red{
	float: right;
}
.product-tit-time{
	float: left;
	width: 566rpx;
	text-align: left;
	line-height: 60.84rpx;
	color: #888;
}
