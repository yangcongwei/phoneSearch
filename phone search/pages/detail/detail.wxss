/*轮播图下边按钮*/
page .wx-swiper-dots.wx-swiper-dots-horizontal{
    margin-bottom: 4rpx;
}
page .wx-swiper-dot{
    width: 14.04rpx;
    display: inline-flex;
    height: 14.04rpx;
    vertical-align:middle;
    
    margin:0 17.55rpx;
}
page .wx-swiper-dot::before{
    content: '';
    background: #dcdcdc;
    flex-grow: 1;
    border-radius: 50%;
}
page .wx-swiper-dot-active::before{
    content: '';
    background:#1472e0;
    flex-grow: 1;
}
.hoverClass1{
	background-color: #e3e3e3;
}
